<div class="grid gap-5">
  <%= form_for address do |f| %>
    <div class="grid gap-4">

      <%= turbo_frame_tag :address_form_errors do %>
        <% if address.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">There were errors with your submission:</strong>
            <ul class="mt-3 list-disc list-inside text-sm text-red-600">
              <% address.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>

      <div class="grid gap-1">
        <%= f.label :street, class: "block text-sm font-medium text-gray-900" %>
        <%= f.text_field :street,
          class: class_names(
            "bg-gray-50 border border-gray-300 text-gray-900",
            "text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500",
            "block w-full p-2.5",
          ) %>
      </div>

      <div class="grid gap-1">
        <%= f.label :locality, "City", class: "block text-sm font-medium text-gray-900" %>
        <%= f.text_field :locality,
          class: class_names(
            "bg-gray-50 border border-gray-300 text-gray-900",
            "text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500",
            "block w-full p-2.5",
          ) %>
      </div>

      <div class="grid gap-1">
        <%= f.label :division, "State", class: "block text-sm font-medium text-gray-900" %>
        <%= f.text_field :division,
          class: class_names(
            "bg-gray-50 border border-gray-300 text-gray-900",
            "text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500",
            "block w-full p-2.5",
          ) %>
      </div>

      <div class="grid gap-1">
        <%= f.label :postal_code, class: "block text-sm font-medium text-gray-900" %>
        <%= f.text_field :postal_code,
          class: class_names(
            "bg-gray-50 border border-gray-300 text-gray-900",
            "text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500",
            "block w-full p-2.5",
          ) %>
      </div>

      <%= f.submit "Get Forecast",
        class: class_names(
          "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4",
          "focus:outline-none focus:ring-blue-300 font-medium",
          "rounded-lg text-sm w-full sm:w-auto px-5 py-2.5",
          "text-center hover:cursor-pointer",
        ) %>
    </div>
  <% end %>
</div>